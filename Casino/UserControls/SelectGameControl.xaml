<UserControl x:Class="Casino.UserControls.SelectGameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Casino.UserControls" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d">
    <UserControl.Background>
        <ImageBrush ImageSource="/Casino;component/Assets/Casino.jpg"/>
    </UserControl.Background>

    <Grid>
        <mah:FlipView x:Name="flipview" Margin="80,80,80,80" Background="{x:Null}" MouseHoverBorderBrush="{x:Null}" BannerForeground="{x:Null}" Foreground="{x:Null}">
        </mah:FlipView>
    </Grid>
</UserControl>
